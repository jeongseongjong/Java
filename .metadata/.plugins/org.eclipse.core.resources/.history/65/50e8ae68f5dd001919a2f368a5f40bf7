package com.biz.bank;

import java.util.Scanner;

public class BankServiceV1 {

	int intBalance ;
	String strNum;
	
	Scanner scan ;
	
	public BankServiceV1() {
		scan = new Scanner(System.in);
	}
	
	public BankServiceV1(String strNum, int intBalance) {
		this.strNum = strNum;
		this.intBalance = intBalance ;
		scan = new Scanner(System.in);
	}
	
	public boolean viewBank() {
		
		System.out.println("계좌번호 : ");
		String strKeyIn = scan.nextLine();
		if(strKeyIn.equals(strNum)) {
			System.out.println("===============================");
			System.out.println("계좌번호 : %04d"+ strNum);
			System.out.println("잔고 : %d" + intBalance);
			System.out.println("===============================");
		}else {
			System.out.println("계좌정보 없음");
			return false;
		}
		return true;
	}
	
		public void input() {
			System.out.println("입금처리");
			System.out.println("입금액 >> ");
			String strInput = scan.nextLine();
		
		
	}
}
